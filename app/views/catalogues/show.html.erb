<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title></title>
  <link rel="stylesheet" href="">
</head>
<body>
  <div class ="header">
      <!-- this goes to index -->
    <%= image_tag("headers/#{@account}", class: "header_logo") %>
    <p class = "front-title"><%= @account %></p>
  </div>

  <% if user_signed_in? %>

    <div class = "pdf-container">
    </div>

  <% elsif admin_signed_in? %>
    <!-- <%= @test %> -->
    <div class = "pdf-container">
      <% if @account == "GEAR" || "UNDER ARMOR" %>
        <% @pdfs.each_with_index do |pdf, index| %>
        <% filename = pdf.split('/').last %>
      <!-- displayname = @filenames[@account][index]  -->
        <%= link_to(filename, controller: "catalogues", action: "subfolder", subid:filename, id:@account) %>
        <% end %>
      <% else %>
        <% @pdfs.each_with_index do |pdf, index| %>
        <% filename = pdf.split('/').last %>
        <!-- displayname = @filenames[@account][index]  -->
        <a href='<%= image_path("#{@account}/#{filename}")%>'><%= filename %></a>
        <% end %>
      <% end %>
    </div>
    <p id="showback">
      <a href = "/">BACK</a>
    </p>
  <% else %>
  <p>Please sign in</p>
  <% end %>

</body>
</html>
